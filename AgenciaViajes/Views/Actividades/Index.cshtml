@model IEnumerable<AgenciaViajes.Models.Actividade>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Gestión de Actividades";
}

<section class="py-5 text-center" style="background-color: #040E27;">
    <div class="container-fluid py-lg-3">
        <h1 class="fw-bold text-white">Gestión de Actividades</h1>
        <p>
            <a asp-action="Create" class="btn btn-danger my-2">Crear Nueva</a>
        </p>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.Precio)</th>
                            <th>@Html.DisplayNameFor(model => model.Duracion)</th>
                            <th>@Html.DisplayNameFor(model => model.Destino.Nombre)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                                <td>@Html.DisplayFor(modelItem => item.Duracion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Destino.Nombre)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ActividadId" class="btn btn-outline-secondary btn-sm">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.ActividadId" class="btn btn-outline-secondary btn-sm">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.ActividadId" class="btn btn-outline-danger btn-sm">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>