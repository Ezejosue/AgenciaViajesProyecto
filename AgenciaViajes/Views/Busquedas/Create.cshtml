@model AgenciaViajes.Models.Busqueda

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Crear Busqueda";
}

<section class="py-5 text-center" style="background-color: #040E27;">
    <div class="container-fluid py-lg-3">
        <h1 class="fw-bold text-white">Crear Nueva Búsqueda</h1>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card shadow">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="UsuarioId" class="control-label"></label>
                                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="FechaBusqueda" class="control-label"></label>
                                <input asp-for="FechaBusqueda" class="form-control" />
                                <span asp-validation-for="FechaBusqueda" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ParametrosBusqueda" class="control-label"></label>
                                <input asp-for="ParametrosBusqueda" class="form-control" />
                                <span asp-validation-for="ParametrosBusqueda" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Crear" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}