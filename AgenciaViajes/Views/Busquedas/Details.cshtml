@model AgenciaViajes.Models.Busqueda

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="py-5 text-center" style="background-color: #040E27;">
    <div class="container-fluid py-lg-3">
        <h1 class="fw-bold text-white">Detalles de la Búsqueda</h1>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card shadow">
                    <div class="card-body">
                        <h4>Búsqueda</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.FechaBusqueda)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.FechaBusqueda)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ParametrosBusqueda)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ParametrosBusqueda)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Usuario)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Usuario.Email)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.BusquedaId" class="btn btn-outline-secondary">Editar</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
</div>