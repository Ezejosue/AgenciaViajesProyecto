@model AgenciaViajes.Models.DestinosAleatorio

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="py-5 text-center" style="background-color: #040E27;">
    <div class="container-fluid py-lg-3">
        <h1 class="fw-bold text-white">Detalles del Destino Aleatorio</h1>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card shadow">
                    <div class="card-body">
                        <div>
                            <h4>Destinos Aleatorios</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.FechaGeneracion)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.FechaGeneracion)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Destino)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Destino.Nombre)
                                </dd>
                            </dl>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model?.DestinoAleatorioId" class="btn btn-outline-secondary">Editar</a>
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>