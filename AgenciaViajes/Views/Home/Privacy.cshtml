<!-- Destinos Relacioandos -->
<main>

    <div class="py-5 mt-1" style="background: #ffffff !important">
        <div class="container">

            <div class="text-center mt-5 mb-5">
                <h1 class="font-monospace">Destinos Relacionados</h1>
            </div>

            <div class="row row-cols-1 row-cols-md-3 g-4">
                
                @if (Model.destinosRandom != null && Model.destinosRandom.Any())
                {
                    @foreach (var destindom in Model.destinosRandom)
                    {
                        <div class="col">
                            <a asp-controller="Home" asp-action="Privacy" asp-route-id="@destindom.DestinoId" style="text-decoration: none !important;">
                                <div class="card">
                                    <img src="@Html.DisplayFor(modelItem => destindom.ImagenUrl)" class="card-img-top" alt="Imagen 1">
                                    <div class="card-body">
                                        <h5 class="card-title fw-semibold">@Html.DisplayFor(modelItem => destindom.Nombre)</h5>
                                        <p class="card-text" style="color: #9a9999;">
                                            @Html.DisplayFor(modelItem => destindom.Descripcion)
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                }
                else
                {
                    //no mostrar nada porque no hay destinos
                }
                
            </div>

        </div>
    </div>

</main>
