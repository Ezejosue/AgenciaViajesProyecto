@model AgenciaViajes.Models.DestinoActividadViewModel


@{
    ViewData["Title"] = "Detalle";
}

<!-- Encabezado -->
<section class="py-5 text-center" style="background-image: url('@Model.Destino.ImagenUrl');background-size: cover;background-repeat: no-repeat;height: 400px;">
    <div class="container-fluid py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-bold text-white">@Model.Destino.Nombre</h1>
            <p class="lead text-white fw-bold">@Model.Destino.Descripcion</p>
            <p>
                <a href="#" class="btn btn-danger my-2">Conocer más</a>
            </p>
        </div>
    </div>
</section>

<!-- Contenido de la pagina de destinos -->
<div class="container pb-2">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-9">
            <div class="mt-5">
                <h3 class="font-monospace">Descripción</h3>
                <p>País: <b>@Model.Destino.Pais</b></p>
                <p>Zona Geografica: <b>@Model.Destino.ZonaGeografica</b></p>
                <p>@Model.Destino.Descripcion</p>

                <h3 class="font-monospace">Actividades</h3>
               
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Duración</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Actividades != null && Model.Actividades.Any())
                        {
                            @foreach (var actividad in Model.Actividades)
                            {
                                <tr>
                                    <th>@actividad.Nombre</th>
                                    <td>@actividad.Descripcion</td>
                                    <td>$@actividad.Precio</td>
                                    <td>@actividad.Duracion</td>
                                </tr>
                            }
                           
                        }
                        else
                        {
                            <tr colspan="4">
                                <th>No hay actividades disponibles.</th>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>

