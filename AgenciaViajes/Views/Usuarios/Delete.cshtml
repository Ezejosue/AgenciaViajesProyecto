@model AgenciaViajes.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Eliminar Usuario";
}

<section class="py-5 text-center" style="background-color: #040E27;">
    <div class="container-fluid py-lg-3">
        <h1 class="fw-bold text-white">Eliminar Usuario</h1>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="card shadow">
            <div class="card-body">
                <h3 class="text-center mb-4">¿Estás seguro de que deseas eliminar este usuario?</h3>
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Contrasena)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Contrasena)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaRegistro)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TipoUsuario)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.TipoUsuario)</dd>
                </dl>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="UsuarioId" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                </form>
            </div>
        </div>
    </div>
</div>